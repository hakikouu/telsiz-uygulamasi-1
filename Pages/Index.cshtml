@page

<div class="container">
    <div class="row"> </div>
    <div class="row">
        <div class="col-2">Kullanıcı</div>
        <div class="col-4"><input type="text" id="userInput" /></div>
    </div>
    <div class="row">
        <div class="col-2">Mesaj</div>
        <div class="col-4"><input type="text" id="messageInput" /></div>
    </div>
    <div class="row"> </div>
    <div class="row">
        <div class="col-6">
            <input type="button" id="sendButton" value="Mesaj Gönder" />
        </div>
    </div>
</div>
<hr />
<div class="row">
    <div class="col-12">
        <ul id="messagesList"></ul>
    </div>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/6.0.1/signalr.min.js"></script>
    <script>
        const connection = new signalR.HubConnectionBuilder()
            .withUrl("/chatHub")
            .build();

        // Butonun pasif olmasını sağla, bağlantı kurulana kadar tıklanamasın.
        document.getElementById("sendButton").disabled = true;

        // Sunucudan "ReceiveMessage" komutu geldiğinde bu fonksiyon çalışır.
        connection.on("ReceiveMessage", function (user, message) {
            const li = document.createElement("li");
            document.getElementById("messagesList").appendChild(li);
            // Mesajın XSS saldırılarına karşı güvenli olması için textContent kullanıyoruz.
            li.textContent = `${user}: ${message}`;
        });

        // Bağlantı başarılı bir şekilde kurulduğunda çalışır.
        connection.start().then(function () {
            console.log("Bağlantı kuruldu!");
            document.getElementById("sendButton").disabled = false;
        }).catch(function (err) {
            return console.error(err.toString());
        });

        // "Mesaj Gönder" butonuna tıklandığında bu fonksiyon çalışır.
        document.getElementById("sendButton").addEventListener("click", function (event) {
            const user = document.getElementById("userInput").value;
            const message = document.getElementById("messageInput").value;
            // Sunucudaki "SendMessage" metodunu çağırır.
            connection.invoke("SendMessage", user, message).catch(function (err) {
                return console.error(err.toString());
            });
            event.preventDefault();
        });
    </script>
}